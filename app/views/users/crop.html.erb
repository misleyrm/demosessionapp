<div class="row">
  <div class="modal-title center-align uppercase">
    <h3 class="panel-title">Crop Avatar</h3>
  </div>
</div>
<div class="row">
  <div class= "col s12">
    <%= image_tag @user.image_url(:large), id: "cropbox" %>
  </div>
</div>
<div class="row">
  <div class= "col s12">
    <%= simple_form_for @user, :url => setCoord_user_path(), :method => :get, remote: true do |f| %>
        <% %w[x y w h].each do |attribute| %>
            <%= f.input "crop_#{attribute}",:class =>"crop_#{attribute}", as: :hidden %>
        <% end %>
        <%= f.hidden_field :current_step, :value => "crop_image",:id => "current_step_avatar" %>
        <div class="form-actions">
          <%= button_tag "Update Avatar", data: { disable_with: "Please wait..." } %>
        </div>
    <% end %>
  </div>
</div>
