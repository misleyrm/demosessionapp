<p id="notice"><%= notice %></p>

<h1>Listing Invitations</h1>

<table>
  <thead>
    <tr>
      <th>Sender</th>
      <th>List</th>
      <th>Recipient email</th>
      <th>Token</th>
      <th>Sent at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invitations.each do |invitation| %>
      <tr>
        <td><%= invitation.sender_id %></td>
        <td><%= invitation.list_id %></td>
        <td><%= invitation.recipient_email %></td>
        <td><%= invitation.token %></td>
        <td><%= invitation.sent_at %></td>
        <td><%= link_to 'Show',  list_invitations_path %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Invitation', new_list_invitation_path %>
