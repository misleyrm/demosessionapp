<div id='blocker_<%= t_blocker.id %>' data-blocker-id="<%= t_blocker.id %>" class="blocker">
	 <%= link_to edit_task_t_blocker_path(id: t_blocker.id, task_id: t_blocker.parent_task_id),class: "blocker_detail", remote: true do %>
		 <%= label_tag "blocker_#{t_blocker.id}", t_blocker.detail, class: "truncate" %>
	 <% end %>
		<ul class="action-menu">
				<li>
		 			<%= link_to edit_task_t_blocker_path(id: t_blocker.id, task_id: t_blocker.parent_task_id), remote: true, data: {behavior: 'modal'} do %>
		 				 <i class="material-icons md-1rem md-dark md-inactive">mode_edit</i>
		 			<% end %>
	 		  </li>
				<li>
				 <%= link_to t_blocker, method: :delete, data: {confirm: "Are you sure?"}, remote: true  do %>
						<i class="material-icons md-1rem md-dark md-inactive">cancel</i>
				 <% end %>
			 </li>
		 </ul>
</div>
